<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping"
                  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                  xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping
                          https://www.doctrine-project.org/schemas/orm/doctrine-mapping.xsd">
    <entity name="App\Entity\Specification\Specification" table="specifications" repository-class="App\Infrastructure\Doctrine\Dbal\Repository\Specification\WriteSpecificationRepository">
        <id name="id" type="specification_unique_id" column="id">
            <generator strategy="NONE" />
        </id>

        <embedded name="company" class="App\Entity\Specification\ValueObject\Company" use-column-prefix="false" />
        <embedded name="model" class="App\Entity\Specification\ValueObject\Model" use-column-prefix="false" />
        <embedded name="details" class="App\Entity\Specification\ValueObject\Details" use-column-prefix="false" />
    </entity>
</doctrine-mapping>